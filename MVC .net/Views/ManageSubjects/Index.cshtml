@{
    @model List<SubjectModel>

    ViewData["Title"] = "Index";
}

<h1 class="text-center">Gestionar Materias</h1>
<br />
<div class="row text-center col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12">
    <a href="./ManageSubjects/NewSubject">Agregar Nueva Materia</a>
</div>
<br />
<div class="Success" name="AddSubjectSuccess" id="AddSubjectSuccess">
    <span>@ViewBag.Success</span>
</div>
<div class="Danger" name="AddSubjectUnsuccessful" id="AddSubjectUnsuccessful">
    <bold>@ViewBag.Warning</bold>
</div>
<br />
<div class="danger" name="wrongenter" id="wrongenter">
    <bold>@ViewBag.Error</bold>
</div>

<br />
<div class="success">
    @{ if (Model.Count != 0)
        {
            foreach (SubjectModel subject in Model)
            {
            <div>
                 <form method="post" action="@Url.Content("~/ManageSubjects/ModifySubject")">
                        <div class="row col-lg-10 col-lg-offset-2">
                            <h4 class="col-lg-8 col-md-8 col-sm-12 text-left">@subject.NameSubject</h4>
                            <input type="hidden"  name="subjectName" id="subjectName" value="@subject.NameSubject" />
                            <input type="hidden" name="SubjectIdClass" id="SubjectIdClass" value="@subject.Id" />
                            <input type="hidden" name="SubjectHeadTeacherId" id="SubjectHeadTeacherId" />
                            <input type="submit" class="btn-sm btn-success"  value="Modificar" />
                            <a class="col-lg-4 col-md-4 col-sm-12 text-center" href=""></a>
                        </div>
                 </form>
            </div>
            }
        }
    }
</div>