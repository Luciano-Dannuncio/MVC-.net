
@{
    ViewData["Title"] = "NewSubject";
}

<div class="container ">
    <div class="card col-lg-8 col-lg-offset-2 col-sm-12  ">
        <div class="danger" name="wrongenter" id="wrongenter">
            @ViewBag.Error
        </div>
        <br />
        <form action="@Url.Content("~/ManageSubjects/NewSubject")" method="post" class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-12" name="LogInForm" id="LogInForm">

            <div class="row text-center align-content-center">
                <label for="namesubject">Nombre de la Materia</label>
                <input type="text" name="namesubject" id="namesubject" />
            </div>

            <div class="row text-center align-content-center">
                <label for="headteacherdni">Dni jefa/e de catedra</label>
                <input type="number" name="headteacherdni" id="headteacherdni" />
            </div>

            <div class="row text-center">
                <input class="form-check-input" type="checkbox" value="true" name="isactive" id="isactive">
                <label class="form-check-label" for="isactive">
                    Activar Materia
                </label>
            </div>
            <div class="row text-center align-content-center">
                <input type="submit" class="btn btn-success" value="Crear" />
            </div>
        </form>
    </div>
</div>