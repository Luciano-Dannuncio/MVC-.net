@{
    @model int
    ViewData["Title"] = "EditClass";

}

    <div class="backimageAdmin rounded">
        <form action="@Url.Content("~/ManageSubjects/UpdateClass")" method="post" class="align-content-center card border-dark border-3 bg-transparent" name="LogInForm" id="LogInForm">
            <br />
            <div class="form-group col-lg-6 col-md-6 col-sm-10 offset-lg-3 offset-md-3 offset-sm-1 text-center">
                <h3 class="text-light">Cátedra: @ViewBag.NameSubject</h3>
                <h4>Comisión : @ViewBag.Classroom</h4>
            </div>
            <br />
            @{
                if (ViewBag.Success != "" && ViewBag.Success != null)
                {
                    <div class="SuccessMessage text-success font-weight-bold text-center bg-dark" name="AddSubjectSuccess" id="AddSubjectSuccess">
                        <p>@ViewBag.Success</p>
                    </div>
                }
                if (ViewBag.Warning != "" && ViewBag.Warning != null)
                {
                    <div class="danger text-danger font-weight-light text-center bg-dark" name="warning" id="warning">
                        <p>@ViewBag.Warning</p>
                    </div>
                }
                if (ViewBag.Error != "" && ViewBag.Error != null)
                {
                    <div class="danger text-danger font-weight-bold text-center bg-dark" name="error" id="error">
                        <p>@ViewBag.Error</p>
                    </div>
                }
            }
            <br />
            <input name="subjectid" id="subjectid" type="hidden" value="@Model" />
            <input name="classid" id="classid" type="hidden" value="@ViewBag.ClassId" />

            <div class="form-group col-lg-6 col-md-6 col-sm-10 offset-lg-3 offset-md-3 offset-sm-1 text-center">
                <div class="bg-dark rounded largeopacity">
                    <label for="classroom">Número de comisión</label>
                </div>
                <input class="form-control" type="number" name="classroom" id="classroom" value="@ViewBag.Classroom" />
            </div>

            <div class="form-group col-lg-6 col-md-6 col-sm-10 offset-lg-3 offset-md-3 offset-sm-1 text-center">
                <div class="bg-dark rounded largeopacity">
                    <label for="maxstudent">Cupo máximo de estudiantes</label>
                </div>
                <input class="form-control" type="number" name="maxstudent" id="maxstudent" value="@ViewBag.MaxStudent" />
            </div>

            <div class="form-group col-lg-6 col-md-6 col-sm-10 offset-lg-3 offset-md-3 offset-sm-1 text-center">
                <div class="bg-dark rounded largeopacity">
                    <p>Profesor Actual: @ViewBag.TeacherName</p>
                    <label for="teacherdni">Dni Profesor</label>
                </div>

                <input class="form-control" type="tel" minlength="7" maxlength="8" oninvalid="this.setCustomValidity('El DNI debe contener números y una longitud de entre 7 y 8 dígitos')" name="teacherdni" id="teacherdni" />
            </div>

            <div class="form-group col-lg-4 col-md-4 col-sm-8 offset-lg-4 offset-md-4 offset-sm-2 text-center align-content-center">
                <input type="submit" class="btn btn-dark text-light" value="Guardar Cambios" />
            </div>
        </form>
    </div>
