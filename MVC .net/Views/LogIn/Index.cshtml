
@{
    ViewData["Title"] = "LogIn";
}

<div class="row col-lg-8 col-lg-offset-2 col-sm-12  ">
    <div class="card">
        <div class="sucess" name="wrongenter" id="wrongenter">
            <bold>@ViewBag.Success</bold>
        </div>
        <div class="danger" name="wrongenter" id="wrongenter">
            @ViewBag.Warning
        </div>
        <div class="danger" name="wrongenter" id="wrongenter">
            <bold>@ViewBag.Error</bold>
        </div>
        <form action="@Url.Content("~/LogIn")" method="post" class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-12" name="LogInForm" id="LogInForm">

            <div class="row text-center align-content-center">
                <label for="Email">Email</label>
                <input type="text" name="email" id="email" />
            </div>
            <div class="row" text-center align-content-center">
                <label for="password">Contraseña</label>
                <input type="password" id="password" name="password" />
            </div>
            <div class="row text-center align-content-center">
                <input type="submit" class="btn btn-success" value="Ingresar" />
            </div>
        </form>
        <div class="row text-center align-content-center">
            <a href="@Url.Content("~/Login/NewUser")">¿No estas registrado?, crea un nuevo usuario</a>
        </div>
    </div>    
</div>

