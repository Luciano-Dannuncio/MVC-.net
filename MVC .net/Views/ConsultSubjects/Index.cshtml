@{
    @model List<SubjectModel>

    ViewData["Title"] = "Index";
    
}
    <div class="backimageStudent rounded">
        <br /><br />
        <div class="bg-dark largeopacity ">
            <h2 class="text-center text-light">Listado de Materias</h2>
        </div>
        <br />
        <div class="bg-dark largeopacity">
            <p class="text-center text-light font-weight-bold">Encuentra e inscribete a la materia que desees cursar en pocos pasos.</p>
        </div>   
          
    </div>
        <br />
        <div class="container-fluid bg-secondary rounded largeopacity">
            <br />
            <div class="SuccessMessage text-success font-weight-bold text-center bg-dark rounded largeopacity" name="AddSubjectSuccess" id="AddSubjectSuccess">
                <p>@ViewBag.Success</p>
            </div>

            <div class="danger text-danger font-weight-light text-center bg-dark rounded largeopacity" name="warning" id="warning">
                <p>@ViewBag.Warning</p>
            </div>
            <div class="danger text-danger font-weight-bold text-center bg-dark rounded largeopacity" name="error" id="error">
                <p>@ViewBag.Error</p>
            </div>

            <div class="row">
                <div class="text-center align-content-center col-lg-2 offset-lg-3 col-md-3 offset-md-2 col-sm-6">
                    <form action="@Url.Content("~/Home/")" method="post">
                     
                        <input type="submit" value="Home" class="btn btn-dark text-light" />
                    </form>
                </div>

                <div class="text-center upperpadding col-lg-2 offset-lg-2 col-md-3 offset-md-2 col-sm-6">
                    <form action="@Url.Content("~/MyInscriptions/")" method="post">
                  
                        <input type="submit" value="Mis Inscripciones" class="btn btn-dark text-light" />
                    </form>
                </div>
            </div>
            <br />

            @{ if (Model.Count != 0)
                {
                    foreach (SubjectModel subject in Model)
                    {
                        <br />
                        <div class="card card-body  bg-dark border-dark border-3">
                            <form method="post" action="@Url.Content("~/RegisterToSubject/")">
                                <div class="row ">
                                    <div class="col-lg-4 col-md-4 offset-lg-1 offset-md-1 col-sm-12 bg-transparent">
                                        <input type="hidden" name="subjectid" id="subjectid" value="@subject.Id" />
                                        <h4 class="text-left text-white">@subject.NameSubject</h4>
                                    </div>
                                    @{
                                        if (subject.IsInscript == true)
                                        {
                                            <div class="col-lg-4">
                                                <h6 class="text-left text-success font-weight-bolder">Ya se encuentra inscripto</h6>
                                            </div>
                                            <div class="col-lg-2">
                                                <input class="btn btn-secondary float-right" disabled type="submit" value="Inscribirme" />
                                            </div>

                                        }
                                        else if (subject.isactive == false)
                                        {
                                            <div class="col-lg-4">
                                                <h6 class="text-left text-danger font-weight-bolder">La cátedra ha sido eliminada.</h6>
                                            </div>
                                            <div class="col-lg-2">
                                                <input class="btn btn-secondary float-right" disabled type="submit" value="Inscribirme" />
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-lg-2 offset-lg-4 offset-md-4 justify-content-sm-center">
                                                <input class="btn btn-primary active text-white float-right" type="submit" value="Inscribirme" />
                                            </div>
                                        }
                                    }
                                </div>
                            </form>
                        </div>
                        <br />
                    }
                }
            }
        </div>
