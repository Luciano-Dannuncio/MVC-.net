@{
    @model List<TeacherModel>

    ViewData["Title"] = "Index";
}

<h1 class="text-center">Gestionar Profesores</h1>
<br />
<div class="row text-center col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2 col-sm-12">
    <a href="./ManageTeachers/NewTeacher">Agregar nuevo docente</a>
</div>
<br />
<div class="Success" name="success" id="success">
    <span>@ViewBag.Success</span>
</div>
<div class="Danger" name="warning" id="warning">
    <p>@ViewBag.Warning</p>
</div>
<br />
<div class="Danger" name="error" id="error">
    <bold>@ViewBag.Error</bold>
</div>

<br />
<div class="success">
    @{ if (Model.Count != 0)
        {
            foreach (TeacherModel teacher in Model)
            {
                <div class="card">
                    <form method="post" action="@Url.Content("~/ManageTeachers/ModifyTeacher")">
                        <input type="hidden" name="teacherid" id="teacherid" value="@teacher.Id" />
                        <div class="row">
                            <div class="col-lg-8 col-md-6 float-left">
                                <p><bold>@teacher.LastName </bold>  @teacher.Name</p>
                                <p>Dni: @teacher.Dni</p>
                            </div>
                            <div class="col-lg-4 col-md-6 col-lg-offset-8 col-md-offset-6 ">
                                <input class="form-check-input" type="checkbox" value="true" name="isactive" id="isactive" Value="@teacher.Active">
                                <label class="form-check-label" for="isactive">
                                    Activar/Desactivar Profesor
                                </label>
                                <input type="submit" class="btn-sm btn-success" value="Modificar" />
                            </div>
                        </div>
                    </form>
                </div>
            }
        }
    }
</div>
